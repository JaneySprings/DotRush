{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc: watch",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-w",
                "-p",
                "${workspaceFolder}/src/VSCode/src"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "vsix",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "args": [
                "cake",
                "--target=vsix",
                "--configuration=release"
            ]
        }
    ]
}
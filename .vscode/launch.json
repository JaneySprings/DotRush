{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/src/VSCode"
            ],
            "outFiles": [
                "${workspaceFolder}/src/VSCode/extension/**/*.js"
            ],
            "preLaunchTask": "tsc: watch"
        },
        {
            "name": ".NET Attach to LSP",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:dotrush-essentials.pickProcess}"
        }
    ]
}
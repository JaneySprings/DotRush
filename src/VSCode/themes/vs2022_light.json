{
    "$schema": "vscode://schemas/color-theme",
    "name": "Visual Studio 2022 Light",
    "type": "light",
    "colors": {
        // Window area
        "titleBar.activeBackground": "#fdfbff", // surface
        "titleBar.activeForeground": "#1a1c1e", // onSurface
        "titleBar.inactiveBackground": "#fdfbff", // surface
        // Editor area
        "editor.background": "#fdfbff", // surface
        "editorIndentGuide.background1": "#c4c6cf", // outlineVariant
        "editorIndentGuide.activeBackground1": "#74777f", // outline
        "editor.inlineValuesBackground": "#0000",
        "editor.inlineValuesForeground": "#1a1c1e", // onSurface
        "editorGroupHeader.tabsBackground": "#fdfbff",  // surface
        "tab.activeBackground": "#fdfbff",  // surface
        "tab.activeForeground": "#1a1c1e",  // onSurface
        "tab.inactiveBackground": "#f1f0f4",    // neutral95
        "tab.inactiveForeground": "#1a1c1e61",   // onSurface(38%)
        "tab.activeBorderTop": "#1c5eab", // primary
        "tab.border": "#c4c6cf61",  // outlineVariant(38%)

        // SideBar area
        "sideBar.background": "#fdfbff",    // surface
        "sideBar.foreground": "#1a1c1e",    // onSurface
        "sideBar.border": "#c4c6cf",    // outlineVariant
        "sideBarTitle.foreground": "#1a1c1e61",   // onSurface(38%)
        "sideBarSectionHeader.background": "#fdfbff", // surface
        "sideBarSectionHeader.foreground": "#1a1c1e", // onSurface
        "scrollbarSlider.background": "#c4c6cf",    // outlineVariant 
        "scrollbar.shadow": "#0000",
        "list.activeSelectionBackground": "#1c5eab85",  // primary(48%)
        "list.inactiveSelectionBackground": "#555f7131", // secondary(16%)
        
        // StatusBar area
        "statusBar.background": "#1c5eab",  // primary
        "statusBar.foreground": "#ffffff",  // onPrimary
        "statusBar.debuggingBackground": "#9e430a", // customContainer(#BC5922)
        "statusBar.debuggingForeground": "#ffffff", // onCustomContainer(#BC5922)
        "statusBar.noFolderBackground": "#1c5eab",  // primary
        "statusBar.noFolderForeground": "#ffffff",  // onPrimary

        // Picker area
        "pickerGroup.foreground": "#1c5eab",    // primary
        "pickerGroup.border": "#c4c6cf",    // outlineVariant
        "quickInput.background": "#f1f0f4", // neutral95
        "quickInput.foreground": "#1a1c1e", // onSurface
        "quickInputTitle.background": "#f1f0f4", // neutral95
        "list.highlightForeground": "#1c5eab",  // primary
        "list.focusHighlightForeground": "#1c5eab", // primary
        "input.placeholderForeground": "#1a1c1e61", // onSurface(38%)
        "input.foreground": "#1a1c1e",  // onSurface
        "input.background": "#f1f0f4", // neutral95
        "input.border": "#0000",

        // Popup area
        "editorHoverWidget.background": "#f1f0f4",  // neutral95
        "editorHoverWidget.border": "#c4c6cf",  // outlineVariant
        "editorHoverWidget.foreground": "#1a1c1e",  // onSurface
        "editorSuggestWidget.background": "#f1f0f4",    // neutral95
        "editorSuggestWidget.border": "#c4c6cf",    // outlineVariant
        "editorSuggestWidget.foreground": "#1a1c1e",    // onSurface

        // ActivityBar area
        "activityBar.background": "#f1f0f4",    // neutral95
        "activityBar.foreground": "#001b3c",    // onPrimaryContainer
        "activityBarBadge.background": "#d5e3ff",   // primaryContainer
        "activityBarBadge.foreground": "#001b3c",   // onPrimaryContainer
        
        // Other
        "focusBorder": "#c4c6cf", // outlineVariant
        "panelTitle.activeBorder": "#1c5eab", // primary
        "panelSectionHeader.background": "#fdfbff" // surface
    },
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "*.deprecated": {
            "strikethrough": true
        }
    },
    // https://github.com/microsoft/vscode/blob/master/extensions/theme-defaults/themes/light_vs.json
    "tokenColors": [
        {
            "scope": [
                "meta.embedded",
                "source.groovy.embedded"
            ],
            "settings": {
                "foreground": "#000000ff"
            }
        },
        {
            "scope": "emphasis",
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": "strong",
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "scope": "meta.diff.header",
            "settings": {
                "foreground": "#000080"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#008000"
            }
        },
        {
            "scope": "constant.language",
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "scope": [
                "constant.numeric",
                "entity.name.operator.custom-literal.number",
                "variable.other.enummember",
                "keyword.operator.plus.exponent",
                "keyword.operator.minus.exponent"
            ],
            "settings": {
                "foreground": "#098658"
            }
        },
        {
            "scope": "constant.regexp",
            "settings": {
                "foreground": "#811f3f"
            }
        },
        {
            "name": "css tags in selectors, xml tags",
            "scope": "entity.name.tag",
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "scope": "entity.name.selector",
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "scope": "entity.other.attribute-name",
            "settings": {
                "foreground": "#ff0000"
            }
        },
        {
            "scope": [
                "entity.other.attribute-name.class.css",
                "entity.other.attribute-name.class.mixin.css",
                "entity.other.attribute-name.id.css",
                "entity.other.attribute-name.parent-selector.css",
                "entity.other.attribute-name.pseudo-class.css",
                "entity.other.attribute-name.pseudo-element.css",
                "source.css.less entity.other.attribute-name.id",
                "entity.other.attribute-name.attribute.scss",
                "entity.other.attribute-name.scss"
            ],
            "settings": {
                "foreground": "#800000"
            }
        },
        {
            "scope": "invalid",
            "settings": {
                "foreground": "#cd3131"
            }
        },
        {
            "scope": "markup.underline",
            "settings": {
                "fontStyle": "underline"
            }
        },
        {
            "scope": "markup.bold",
            "settings": {
                "fontStyle": "bold",
                "foreground": "#000080"
            }
        },
        {
            "scope": "markup.heading",
            "settings": {
                "fontStyle": "bold",
                "foreground": "#800000"
            }
        },
        {
            "scope": "markup.italic",
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": "markup.inserted",
            "settings": {
                "foreground": "#098658"
            }
        },
        {
            "scope": "markup.deleted",
            "settings": {
                "foreground": "#a31515"
            }
        },
        {
            "scope": "markup.changed",
            "settings": {
                "foreground": "#0451a5"
            }
        },
        {
            "scope": [
                "punctuation.definition.quote.begin.markdown",

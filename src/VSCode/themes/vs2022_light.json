                "foreground": "#0000ff"
            }
        },
        {
            "scope": "meta.preprocessor.string",
            "settings": {
                "foreground": "#a31515"
            }
        },
        {
            "scope": "meta.preprocessor.numeric",
            "settings": {
                "foreground": "#098658"
            }
        },
        {
            "scope": "meta.structure.dictionary.key.python",
            "settings": {
                "foreground": "#0451a5"
            }
        },
        {
            "scope": "storage",
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "scope": "storage.type",
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "scope": [
                "storage.modifier",
                "keyword.operator.noexcept"
